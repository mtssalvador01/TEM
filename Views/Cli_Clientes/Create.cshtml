@model TecGas.Models.Cli_Clientes

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro de Cliente</h1>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div class="mb-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CodigoClienteId" class="control-label">Codigo Cliente</label>
                    <input asp-for="CodigoClienteId" class="form-control" />
                    <span asp-validation-for="CodigoClienteId" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Cli_Nome" class="control-label">Nome</label>
                    <input asp-for="Cli_Nome" class="form-control" />
                    <span asp-validation-for="Cli_Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cli_CNPJ" class="control-label">CNPJ</label>
                    <input asp-for="Cli_CNPJ" class="form-control" />
                    <span asp-validation-for="Cli_CNPJ" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cli_Endereco" class="control-label">Endereço</label>
                    <input asp-for="Cli_Endereco" class="form-control" />
                    <span asp-validation-for="Cli_Endereco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cli_Telefone" class="control-label">Telefone</label>
                    <input asp-for="Cli_Telefone" class="form-control" />
                    <span asp-validation-for="Cli_Telefone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cli_Email" class="control-label">E-mail</label>
                    <input asp-for="Cli_Email" class="form-control" />
                    <span asp-validation-for="Cli_Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
