        <dt class = "col-sm-2">
           Valor das Peças
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ord_ValorPeca)
        </dd>
        <dt class = "col-sm-2">
            Valor Total
        </dt>
        <dd class = "col-sm-10">
