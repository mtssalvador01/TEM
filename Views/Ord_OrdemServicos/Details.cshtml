    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nº da Ordem
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ord_NumeroOrdem)
        </dd>
        <dt class = "col-sm-2">
            Data de Abertura
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ord_DataAbertura)
        </dd>
        <dt class = "col-sm-2">
           Código do Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigoClienteId)
        </dd>
        <dt class = "col-sm-2">
            Modelo do Equipamento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ord_Modelo)
        </dd>
        <dt class = "col-sm-2">
            Detalhes
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ord_Detalhes)
        </dd>
        <dt class = "col-sm-2">
