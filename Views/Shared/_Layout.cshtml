            else
            {
                <script type="text/javascript">
                                        window.location.href = "@Url.Action("Logar","Publico")"
                </script>
            }
        }

        @*else
            {
                <script type="text/javascript">
                                            window.location.href = "@Url.Action("Logar","Publico")"
                </script>

            }*@


    }
</body>
</html>
